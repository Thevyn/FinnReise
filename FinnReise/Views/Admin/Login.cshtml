@model Model.Login

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Login</h5>
                    <form class="form-signin" method="POST" asp-action="Login">
                        <div class="form-label-group">
                            <input type="text" asp-for="Brukernavn" class="form-control" placeholder="Brukernavn" autofocus>
                            <label for="Brukernavn">Brukernavn</label>
                            <span class="text-danger" asp-validation-for="Brukernavn"></span>
                        </div>

                        <div class="form-label-group">
                            <input type="password" asp-for="Passord" class="form-control" placeholder="Passord">
                            <label for="Passord">Passord</label>
                            <span class="text-danger" asp-validation-for="Passord"></span>
                        </div>
                        <span class="text-danger">@ViewBag.Error</span>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Login</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>